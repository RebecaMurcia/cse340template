<% if (title) { %>
    <h1><%- title %></h1>
    <%} else {
        res.redirect('/')
    } %>

<%- messages()%>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form class="account" action="/inv/add-classification" method="post"> 
    <p>**Field is required</p>
    <div class="input-control">
        <div class="mssg"><i>Name must be alphabetical characters only.</i></div>
    <label for="classificationName">Classification Name:</label>
    <input type="text" id="classificationName" name="classification_name" required pattern="^[a-zA-Z][a-zA-Z\s]*$">
   </div>
    <button type="submit">Add Classification</button>
 </form>